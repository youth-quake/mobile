<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".Friends">

    <ImageView
        android:id="@+id/imgArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de amigos"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amigo1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_roxo_forma"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/chick" />

        <TextView
            android:id="@+id/name"
            style="@style/titleFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Giuliana Miniguiti"
            android:textColor="@color/whiteTheme"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil" />

            <TextView
                android:id="@+id/tvLevel"
                android:text="Nível 28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bodyFriends"
                android:paddingTop="5dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toRightOf="@id/imgPerfil" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amigo2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_roxo_forma"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amigo1">

        <ImageView
            android:id="@+id/imgPerfil_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/alessandra" />

        <TextView
            android:id="@+id/name_1"
            style="@style/titleFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Alessandra "
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_1" />

        <TextView
            android:id="@+id/tvLevel_1"
            android:text="Nível 23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bodyFriends"
            android:paddingTop="5dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/name_1"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amigo3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_roxo_forma"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amigo2">


        <ImageView
            android:id="@+id/imgPerfil_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/siberianhusky" />

        <TextView
            android:id="@+id/name_2"
            style="@style/titleFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Thiago Paz"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_2" />

        <TextView
            android:id="@+id/tvLevel_2"
            android:text="Nível 21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bodyFriends"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/name_2"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amigo5"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_roxo_forma"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amigo3">

        <ImageView
            android:id="@+id/imgPerfil_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/soccer" />

        <TextView
            android:id="@+id/name_3"
            style="@style/titleFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Keven"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_3" />

        <TextView
            android:id="@+id/tvLevel_3"
            android:text="Nível 17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bodyFriends"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@id/name_3"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/amigo6"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_roxo_forma"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amigo5">

        <ImageView
            android:id="@+id/imgPerfil_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/volpe" />

        <TextView
            android:id="@+id/name_4"
            style="@style/titleFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Volpe"
            android:textColor="@color/whiteTheme"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_4" />

        <TextView
            android:id="@+id/tvLevel1"
            android:text="Nível 15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/bodyFriends"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/name_4"
            app:layout_constraintLeft_toRightOf="@id/imgPerfil_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>