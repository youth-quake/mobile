<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="btnRoxo" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_roxo_forma</item>
    </style>

    <style name="btnBranco" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/btn_branco_forma</item>
    </style>

    <style name="font" >
        <item name="android:width">250dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="fontMenu" >
        <item name="android:width">250dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/whiteTheme</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleHome">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="titleWhite">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:textColor">@color/whiteTheme</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--QUIZZ-->
    <style name="titleFeedbackQuizz">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#312E2E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="rightAnswer">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#55B160</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wrongAnswer">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">40dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#E3001E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="infoHome">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTheme</item>
    </style>

    <style name="infoFooter">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTheme</item>
    </style>

    <!--Apostas e Movimentações - Titulos-->
    <style name="titleBetMovements">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
    </style>

    <!--Steps-->
    <style name="titleSteps">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="subtitleSteps">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>




    <!--Apostas e Movimentações - Labels-->
    <style name="labelsInputs">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--Apostas e Movimentações - EditText's-->
    <style name="editTextBetAndMoviments">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:layout_width">268dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--Apostas e Movimentações - Button-->
    <style name="buttonBetAndMoviments">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:topRightRadius">10dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/btn_roxo_forma</item>
    </style>


    <style name="fontQuestion" >
        <item name="android:width">250dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="fontCountQuestion">
        <item name="android:width">250dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
